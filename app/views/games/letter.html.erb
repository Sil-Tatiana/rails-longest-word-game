<div class="container">
  <ul class="letters">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
      </li>
  </ul>

  <form action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="word" placeholder="Write your word:" >
      <input value="Play" class="btn btn-outline-secondary" type="submit" id="button-addon2">
    </div>
  </form>
</div>
